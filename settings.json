{
    // Configurações gerais do editor
    "workbench.startupEditor": "newUntitledFile",
    "workbench.tree.indent": 18,
    "editor.fontSize": 14,
    "editor.lineHeight": 1.8,
    "editor.rulers": [80, 120],
    "editor.fontFamily": "JetBrainsMono Nerd Font, Menlo, Monaco, 'Courier New', monospace",
    "editor.fontLigatures": true,
    "editor.bracketPairColorization.enabled": true,
    "editor.guides.bracketPairs": true,
    "editor.minimap.enabled": false,
    "editor.smoothScrolling": true,
    "editor.cursorSmoothCaretAnimation": "on",
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "extensions.ignoreRecommendations": true,
    "workbench.colorTheme": "Default Dark Modern",
    "workbench.sideBar.location": "right",
    "windsurf.autocompleteSpeed": "fast",
    "editor.tokenColorCustomizations": {
        "comments": "#6B8E23"  // Olive green color for better visibility
    },

    // Configurações específicas para macOS
    "window.nativeTabs": true,
    "window.titleBarStyle": "native",
    "terminal.integrated.macOptionIsMeta": true,
    "terminal.integrated.env.osx": {
        "PATH": "/usr/local/bin:/usr/bin:/bin:/usr/sbin:/sbin:/opt/homebrew/bin"
    },
    "terminal.integrated.defaultProfile.osx": "zsh",
    "terminal.integrated.scrollback": 10000,

    // JavaScript/TypeScript
    "javascript.updateImportsOnFileMove.enabled": "always",
    "typescript.updateImportsOnFileMove.enabled": "always",
    "javascript.suggest.autoImports": true,
    "typescript.suggest.autoImports": true,
    "js/ts.implicitProjectConfig.checkJs": false,
    "typescript.inlayHints.parameterNames.enabled": "all",
    "javascript.inlayHints.parameterNames.enabled": "all",

    // ESLint e Prettier
    "editor.codeActionsOnSave": {
        "source.fixAll.eslint": "explicit",
        "source.organizeImports": "explicit"
    },
    "eslint.validate": [
        "javascript",
        "javascriptreact",
        "typescript",
        "typescriptreact",
        "vue"
    ],
    "prettier.singleQuote": true,
    "prettier.trailingComma": "es5",
    "prettier.requireConfig": true,
    "prettier.configPath": "~/.prettierrc",

    // Python
    "python.defaultInterpreterPath": "/usr/local/bin/python3",
    "python.formatting.provider": "black",
    "python.linting.enabled": true,
    "python.linting.pylintEnabled": true,
    "python.analysis.typeCheckingMode": "basic",
    "jupyter.askForKernelRestart": false,
    "jupyter.interactiveWindow.creationMode": "perFile",

    // Java
    "java.configuration.runtimes": [
        {
            "name": "JavaSE-17",
            "path": "/Library/Java/JavaVirtualMachines/temurin-17.jdk/Contents/Home",
            "default": true
        }
    ],
    "java.format.settings.url": "~/.java-formatter.xml",
    "java.completion.guessMethodArguments": "auto",
    "java.debug.settings.hotCodeReplace": "auto",

    // Docker
    "docker.host": "unix:///var/run/docker.sock",
    "docker.enableTelemetry": false,
    "docker.extension.enableComposeLanguageServer": false,
    "dev.containers.defaultExtensions": [
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode"
    ],

    // Git
    "git.autofetch": true,
    "git.enableSmartCommit": true,
    "git.confirmSync": false,
    "gitlens.codeLens.enabled": false,
    "gitlens.currentLine.enabled": true,
    "gitlens.hovers.currentLine.over": "line",
    "git.openRepositoryInParentFolders": "always",

    // Database
    "sqltools.connections": [],
    "sqltools.autoConnectTo": "default",
    "database-client.showFilter": true,
    "database-client.autoSync": true,

    // Live Server
    "liveServer.settings.donotShowInfoMsg": true,
    "liveServer.settings.donotVerifyTags": true,
    "liveServer.settings.ChromeDebuggingAttachment": true,
    "liveServer.settings.mount": [
        ["/", "./"]
    ],

    // Flutter/Dart
    "dart.previewFlutterUiGuides": true,
    "dart.openDevTools": "flutter",
    "dart.debugExternalPackageLibraries": true,
    "dart.debugSdkLibraries": false,
    "dart.lineLength": 80,

    // Better Comments
    "better-comments.tags": [
        {
            "tag": "!",
            "color": "#FF2D00",
            "strikethrough": false,
            "backgroundColor": "transparent"
        },
        {
            "tag": "?",
            "color": "#3498DB",
            "strikethrough": false,
            "backgroundColor": "transparent"
        },
        {
            "tag": "//",
            "color": "#474747",
            "strikethrough": true,
            "backgroundColor": "transparent"
        },
        {
            "tag": "todo",
            "color": "#FF8C00",
            "strikethrough": false,
            "backgroundColor": "transparent"
        },
        {
            "tag": "*",
            "color": "#98C379",
            "strikethrough": false,
            "backgroundColor": "transparent"
        }
    ],

    // Todo Tree
    "todo-tree.general.tags": [
        "BUG",
        "HACK",
        "FIXME",
        "TODO",
        "XXX",
        "[ ]",
        "[x]"
    ],
    "todo-tree.highlights.defaultHighlight": {
        "icon": "alert",
        "type": "text",
        "foreground": "#FF8C00",
        "opacity": 50
    },

    // Error Lens
    "errorLens.enabledDiagnosticLevels": [
        "error",
        "warning",
        "info"
    ],
    "errorLens.messageEnabled": true,
    "errorLens.messageBackgroundMode": "message",

    // Material Icon Theme
    "material-icon-theme.activeIconPack": "react",
    "material-icon-theme.folders.color": "#90a4ae",
    "material-icon-theme.hidesExplorerArrows": true,

    // Configurações do Explorador de Arquivos
    "explorer.confirmDelete": false,
    "explorer.compactFolders": false,
    "explorer.confirmDragAndDrop": false,
    "explorer.sortOrder": "foldersNestsFiles",
    "explorer.fileNesting.enabled": true,
    "explorer.fileNesting.patterns": {
        "*.ts": "${capture}.js",
        "*.js": "${capture}.js.map, ${capture}.min.js, ${capture}.d.ts",
        "*.jsx": "${capture}.js",
        "*.tsx": "${capture}.ts",
        "tsconfig.json": "tsconfig.*.json",
        "package.json": ".eslint*, prettier*, tsconfig*, vite*, pnpm-lock*, bun.lockb, nest*",
        "*.dart": "${capture}.g.dart, ${capture}.freezed.dart",
        "tailwind.config.js": "tailwind.config*, postcss.config*",
        ".env": ".env*, .env.local",
        "docker-compose.yml": "docker-compose.*, Dockerfile*",
        "README.md": "LICENSE*, CHANGELOG*, CONTRIBUTING*"
    },

    "yaml.schemas": {
        "file:///Users/mendes/.vscode/extensions/atlassian.atlascode-4.0.12/resources/schemas/pipelines-schema.json": "bitbucket-pipelines.yml"
    },
    "redhat.telemetry.enabled": true,
    "console-ninja.featureSet": "Community",
    "pomodoro.workTime": 50,
    "pomodoro.pauseTime": 10,
    "pomodoro.repeat": 7,
    "workbench.iconTheme": "material-icon-theme",
    "editor.codeActions.triggerOnFocusChange": true,
    "github.copilot.enable": {
        "*": true,
        "plaintext": false,
        "markdown": true,
        "scminput": false,
        "python": true
    },
    "github.copilot.nextEditSuggestions.enabled": true
}
